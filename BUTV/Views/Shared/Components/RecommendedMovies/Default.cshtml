@model IEnumerable<MovieEntityModel>
<div class="film-hot responsive">
    @foreach (var m in Model)
    {
        <div class="item">
            <a asp-route="moviedetail" asp-route-sename="@m.SeName">
                <div class="img-item">
                    <img src="@m.Picture.ImageUrl" />
                </div>
            </a>
            <div class="intro-text">
                <a asp-route="moviedetail" asp-route-sename="@m.SeName" title=""><h3>@m.Name</h3></a>
            </div>
        </div>
    }
</div>
<script>
    $('.responsive').slick({
        dots: true,
        infinite: true,
        speed: 300,
        slidesToShow: 6,
        slidesToScroll: 6,
        responsive: [
            {
                breakpoint: 1024,
                settings: {
                    slidesToShow: 4,
                    slidesToScroll: 4,
                    infinite: true,
                    dots: true
                }
            },
            {
                breakpoint: 768,
                settings: {
                    slidesToShow: 3,
                    slidesToScroll: 3
                }
            },
            {
                breakpoint: 490,
                settings: {
                    slidesToShow: 2,
                    slidesToScroll: 2
                }
            },
            {
                breakpoint: 330,
                settings: {
                    slidesToShow: 1,
                    slidesToScroll: 1
                }
            }
            // You can unslick at a given breakpoint now by adding:
            // settings: "unslick"
            // instead of a settings object
        ]
    });
</script>
